:javascript
	$(function() {
		window.App = new Playlists.Routers.AppRouter({
			playlists:#{@playlists.to_json.html_safe}
		});
		
		Backbone.history.start({pushState: true});

		soundManager.url = 'http://playlists.dev:3000';
		soundManager.flashVersion = 9;
		soundManager.onready( function() {
			window.App.player = new Playlists.Views.Player.IndexView(
				{model: new Playlists.Models.Player()}
			)
		});

		soundManager.ontimeout(function() {
		  alert('Плеер завис, перезагрузите страницу! (F5)');
		});
	});



