%p#notice= notice

%p
	%b Name:
	= @playlist.name
%p
	%b Description:
	= @playlist.description
%p
	%b Tags:
	= @playlist.tags

= link_to 'Edit', edit_playlist_path(@playlist)
\|
= link_to 'Back', playlists_path


- if @playlist.tracks.size > 0
	%h2 tracks
	-for track in @playlist.tracks
		.playlist
			%h3
				=track.id
				\:#{track.artist}
				%p= track.title

%h2 Add playlist
= form_for [@playlist, Track.new] do |f|
	%p
		= f.label :artist
		= f.text_field :artist
	%p
		= f.label :title
		= f.text_field :title
	%p= f.submit
= link_to 'Edit', edit_playlist_path(@playlist)
|
\#{link_to 'Back', playlist_path}